<%
=begin %>


Parameters:
object          : describes the model instance, this partial is working on (e.g. a User object, or a special image-object attached to a user object)

attribute_name  : the attribute that is mounted by carrierwave - describes the file path (e.g. image or file)

version         : carrierwave version (thumb, portrait, ...)

use_default_url : boolean that specifies wheather the default image should be displayed if no image is available (otherwise d√≠splay nothing)


<%
=end %>


<%= content_tag :div, class: 'popup-upload-field' do %>
<%# debugger %>
  <% if object.send("#{options[:mount_on]}?") || options[:use_default_url] %>
    <% preview_url = object.send(options[:mount_on]).tap {|o| break o.send(options[:preview_version]) if options[:preview_version]}.send('url') %>
    <% url = object.send(options[:mount_on]).send('url') %>
    <%= link_to(url, :class => 'fancybox', :caption => object.name) do %>
      <%= image_tag(preview_url, size: options[:preview_size]) %>
    <% end %>
  <% end %>
<% end %>


